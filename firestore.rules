rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events collection - allow all operations for now
    match /events/{eventId} {
      allow read, write: if true;
    }
    
    // Admin users collection (if you add authentication later)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Any other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
